widget_class "*<GtkComboBoxEntry>*"     style "murrine-comboboxentry"
widget_class "*<GtkCombo>*"             style "murrine-comboboxentry"

widget_class "*<GtkMenu>*"              style "murrine-menu"
widget_class "*<GtkMenuItem>*"          style "murrine-menu-item"
